<!DOCTYPE html>
<html lang="en">
<head>
  <!-- Bootstrap Core CSS -->
  <link href="/bootstrap/css/bootstrap.min.css" rel="stylesheet" type="text/css">
  <link href="https://cdn.datatables.net/1.10.25/css/jquery.dataTables.min.css" rel="stylesheet" type="text/css">
  <meta charset="UTF-8">
  <title>Pasien | View</title>
</head>
<body>
    <br>
    <div class="container border">
        <hr><h1 class="text-center">Data Pasien</h1><hr>
        <a class="btn btn-success col-md-2 offset-md-5" href="/pasien/write" role="button">Tambah Data</a>
        <hr>
        <div class="table">
            <table id="tabel" class="display" style="width: 100%;">
              <thead>
                <tr>
                    <th>Username</th>
                    <th>Password</th>
                    <th>Nama</th>
                    <th>Phone</th>
                    <th>Email</th> 
                    <th>Province</th>
                    <th>City</th>
                    <th>Districts</th>
                    <th>Detail</th>
                    <th>Postal Code</th>
                    <th>Action</th>
                </tr>
                </thead>
                <tbody></tbody>
            </table>
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-1.12.4.js"></script>
    <script src="https://cdn.datatables.net/1.10.25/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.16/js/dataTables.bootstrap4.min.js"></script>
</body>
<script>
  $(document).ready(function () {
     $('#tabel').DataTable({
          "processing": true,
          "serverSide": false,
          "ajax": {
              "data": "json",
              "type": "GET",
              "url": "/pasien/read/table",
              dataSrc:""
          },
              "columns":
                  [
                      { "data": "username" },
                      { "data": "password" },
                      { "data": "name" },
                      { "data": "telepon" },
                      { "data": "email" },
                      { "data": "provinci" },
                      { "data": "kota" },
                      { "data": "kecamatan" },
                      { "data": "detail" },
                      { "data": "kodepos" },
                      {
                        "data": null,
                        "bSortable": false,
                        "mRender": function (data, type, row) { 
                            return  '<a href=/pasien/update/' + row.username + '><button type="button" class="btn btn-primary">' + 'Edit' + '</button></a>   ' +
                                    '<a href=/pasien/delete/' + row.username + '><button type="button" class="btn btn-danger">' + 'Hapus' + '</button></a>'; 
                        }
                      }
                  ],
                    'columnDefs': [
                        {
                            "targets": 10, // your case first column
                            "className": "text-center"
                        }
                    ]
      });
  });
</script>
</html>